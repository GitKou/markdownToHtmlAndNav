#!/usr/bin/env node
'use strict'

let program = require('commander');
let path = require('path');
let fs = require('fs');
let pkginfo = require('../package.json');
let cwd = process.cwd();
let mdToNav = require('../marked.js');

program.version(pkginfo.version);

program
    .command('generate')
    .description('根据输入的MD文件生成内容HTML文件和导航HTML文件')
    .option('-h, --help', 'input:指定输入的MD文件路径, outHtml:指定输出的内容.html文件的路径, outputNav:指定输出的导航.html文件的路径')
    .option('-t, --traget <input> <outHtml> <outNav>', 'input:指定输入的MD文件路径, outHtml:指定输出的内容.html文件的路径, outputNav:指定输出的导航.html文件的路径')
    .option('-c, --config <config>', '输入配置文件路径')
    .action((cmd, options) => {
        if (!cmd.config && !(cmd.input && cmd.outHtml && cmd.outNav)) {
            console.error('ERROR:generate <input> <outHtml> <outNav>, 请输入input:指定输入的MD文件路径, outHtml:指定输出的内容.html文件的路径, outputNav:指定输出的导航.html文件的路径');
            process.exitCode = 1;
            return;
        }
        else{
            let configfilePath = path.join(cwd, cmd.config);
            let config  = {};
            if (fs.existsSync(configfilePath)) {
                config = require(configfilePath);
            }
            mdToNav.generateFiles(config);
        }
    })
;


program.parse(process.argv);